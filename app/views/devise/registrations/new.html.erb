<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %> 
<div class="signup">
  <div class="container">
        <div class="row text-center pad-top ">
                <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                              <strong>   Register Yourself </strong>  
                            </div>
                            <div class="panel-body">
                                <form role="form">
<br/>
                                        <div class="form-group input-group">
                                            <%= f.label :name,class:"control-label", for:"email" %>
                                          <div class="controls">
                                            <span class="input-group-addon"><i class="fa fa-circle-o-notch"  >
                                               <%= f.text_field :name, autofocus: true, id:"username", placeholder:"Name", class:"input-xlarge" %>
                                            </i></span>
                                            <p class="help-block">Username can contain any letters or numbers, without spaces</p>
                                          </div>
                                        </div>
                                        
                                        
                                        <div class="form-group input-group">
                                            <%= f.label :email,class:"control-label", for:"email" %>
                                            <div class="controls">
                                              <span class="input-group-addon">@
                                                  <%= f.email_field :email, autofocus: true, id:"email", placeholder:"Email", class:"input-xlarge" %>
                                              </span>
                                              <p class="help-block">Please provide your E-mail</p>
                                            </div>
                                        </div>
                                        
                                      <div class="form-group input-group">
                                          <%= f.label :password,  class:"control-label", for:"password" %>
                                          <% if @minimum_password_length %>
                                              <em>(<%= @minimum_password_length %> characters minimum)</em>
                                          <% end %><br />
                                          <div class="controls">
                                            <span class="input-group-addon"><i class="fa fa-lock"  >
                                               <%= f.password_field :password, autocomplete: "off",id:"password", placeholder:"Password", class:"input-xlarge" %>
                                            </i></span>
                                            <p class="help-block">Password should be at least 4 characters</p>
                                          </div>
                                      </div>
                                      
                                     <div class="form-group input-group">
                                             <%= f.label :password_confirmation, class:"control-label" , for:"password_confirm" %>
                                                <div class="controls">
                                                  <span class="input-group-addon"><i class="fa fa-lock"  >
                                                   <%= f.password_field :password_confirmation, autocomplete: "off", id:"password_confirm", placeholder:"Password Confirm" ,class:"input-xlarge" %>
                                                  </i></span>
                                                  <p class="help-block">Please confirm password</p>
                                                </div>
                                      </div>
                                      
                                          <%= f.label 'Profile Picture' %><br>
                                          <div class="center-block">
                                            <%= f.file_field :photo , class: "picmid" %>
                                          </div>
                                      <div class="register">    
                                        <%= f.submit "Register Me",class:"btn btn-success" %>
                                      </div>
                                    <hr />
                                    Already Registered ? <%= render "devise/shared/links" %>
                                    </form>
                            </div>
                           
                        </div>
                    </div>
                
                
        
    </div>
  </div>  
<% end %>
